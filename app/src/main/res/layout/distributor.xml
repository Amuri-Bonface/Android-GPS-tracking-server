<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.florence.mapsagain.Distributor_Register">


    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sname"
        android:layout_marginTop="22dp"
        android:ellipsize="end"
        android:enabled="true"
        android:hint="Enter Phone No"
        android:selectAllOnFocus="false"
        android:textAlignment="center"
        android:textColorHint="@color/dot_light_screen2" />

    <EditText
        android:id="@+id/fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="27dp"
        android:ellipsize="end"
        android:enabled="true"
        android:hint="Enter First Name"
        android:selectAllOnFocus="false"
        android:textAlignment="center"
        android:textColorHint="@color/dot_light_screen2" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ellipsize="end"
        android:enabled="true"
        android:hint="Enter Email Address"
        android:selectAllOnFocus="false"
        android:textAlignment="center"
        android:layout_below="@+id/phone"
        android:layout_alignParentStart="true"
        android:textColorHint="@color/dot_light_screen2"/>


    <EditText
        android:id="@+id/sname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/navigation"
        android:layout_below="@+id/fname"
        android:layout_marginTop="19dp"
        android:ellipsize="end"
        android:enabled="true"
        android:hint="Enter Last Name"
        android:selectAllOnFocus="false"
        android:textAlignment="center"
        android:textColorHint="@color/dot_light_screen2"/>
    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:visibility="visible"
        android:layout_marginStart="22dp"
        android:layout_alignBaseline="@+id/clear"
        android:layout_alignBottom="@+id/clear"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/navigation"
        android:layout_below="@+id/email"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="33dp"
        android:text="CLEAR"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/navigation"
        android:layout_marginTop="30dp"
        android:text="Registration Form"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentEnd="true" />


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/bg_screen2"
        app:menu="@menu/navigation" />


</RelativeLayout>